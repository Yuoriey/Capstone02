<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    nav {
        background-color: var(--color-default);
        color: white;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        nav img {
            max-height: 40px;
            margin-right: 10px;
        }

    .logout-icon {
        cursor: pointer;
        display: flex;
        align-items: center;
    }

    .logout-text {
        margin-left: 5px;
    }

    header {
        color: var(--color-default);
        text-align: left;
        padding: 30px 0;
    }

    h1 {
        font-size: 2.5em;
        margin: 10px 0;
    }

    p {
        font-size: 1.2em;
        margin: 0px;
    }

    h5 {
        font-size: 1.2em;
        margin-top: 10px;
        margin-bottom: 25px;
        font-family: 'Poppins', sans-serif;
    }

    #selected-child {
        font-size: 1.2em;
        font-weight: bold;
        background-color: darkgray;
        padding: 10px;
        border-radius: 5px;
    }

    .display-box {
        position: absolute;
        top: 17%;
        left: 90%;
        transform: translate(-50%, -50%);
        background-color: var(--color-default);
        color: white;
        padding: 10px;
        border-radius: 12px;
        text-align: center;
        width: 200px;
    }

    .display-box p1 {
        font-size: 1em;
    }

    .display-box p {
        font-size: 2em;
    }

    .grand-total {
        position: absolute;
        top: 17%;
        left: 71%;
        transform: translate(-50%, -50%);
        background-color: lightgray;
        color: var(--color-default);
        padding: 10px;
        border-radius: 12px;
        border-width: 3px;
        border-color: var(--color-default);
        text-align: center;
        width: 200px;
    }

        .grand-total p1 {
            font-size: 1em;
        }

        .grand-total p {
            font-size: 2em;
        }

    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin: 20px auto;
        margin-top: auto;
    }

    .card {
        width: 30%;
        margin-bottom: 20px;
        border: 1px solid var(--color-default);
        border-radius: 15px;
        border-width: 3px;
        border-color: var(--color-default);
        padding: 10px;
        box-sizing: border-box;
    }

        .card input[type="checkbox"] {
            width: 20px;
            height: 20px;
        }

    .fee-details {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
    }

    .fee-name {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .fee-amount {
        font-size: 1em;
        margin-top: 5px;
    }

    .highlight-paid {
        background-color: #00FF00;
        border-radius: 5px;
    }

    .highlight-not-paid {
        background-color: #E57373;
        border-radius: 5px;
    }

    .button-container {
        text-align: right;
        margin-top: auto;
        margin-bottom: 20px;
    }

    .action-button {
        padding: 10px 20px;
        background-color: var(--color-default);
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .action-button:hover {
            background-color: #4d5569;
        }
</style>

