@model IEnumerable<Capstone02.Models.Employee>

@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header style="text-align: center; padding: 20px;">
    <h5>Iligan City East National High School - Santa Filomena</h5>
    <h6>Butuan - Cagayan de Oro - Iligan Rd, Iligan City, Lanao del Norte</h6>
    <h6>Since 1985</h6>
</header>

<h5>List of Employees</h5>

<p>
    <a asp-action="Create">+ add new account</a>
</p>

<table id="tbllist" class="table table-responsive-sm table-hover table-outline mb-0">

    <thead class="thead-light">
        <tr>

            @*<th class="small-col">Id</th>*@
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Address</th>
            <th>Position</th>
            <th>Email Address</th>
            <th class="small-medium">Gender</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*    <td>
            <div> @Html.DisplayFor(modelItem => item.Id)</div>
            </td>*@

                <td>
                    <div>@Html.DisplayFor(modelItem => item.FirstName)</div>
                </td>
                <td>
                    <div>
                        <span></span> @Html.DisplayFor(modelItem => item.LastName)
                    </div>
                </td>
                <td>
                    <div class="small text-muted">
                        <span></span> @Html.DisplayFor(modelItem => item.Address)
                    </div>
                </td>
                <td>
                    <div>
                        <div> @Html.DisplayFor(modelItem => item.Position) </div>
                    </div>
                </td>
                <td>
                    <div>@Html.DisplayFor(modelItem => item.EmailAddress)</div>
                </td>

              <td>
                    <div>@Html.DisplayFor(modelItem => item.Gender)</div>
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <i class='bx bx-edit bx-burst-hover action-icon'></i>
                    </a>
                    |
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <i class='bx bx-detail bx-burst-hover action-icon'></i>
                    </a>
                    |
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <i class='bx bx-trash-alt bx-burst-hover action-icon'></i>
                    </a>
                </td>



            </tr>
        }
    </tbody>
</table>

